
<%= form_for(@request, html: { role: 'form', method: :post }) do |f| %>
  <% if @request.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@request.errors.count, "error") %> prohibited this request from being saved:</h2>

      <ul>
      <% @request.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="row">
    <div class=" form-group col-md-6">
      <%= f.label :name %>
      <%= f.text_field :name, autofocus: true, class: 'form-control readonly'%>
    </div>
  </div> 

  <div class="row">
    <div class=" form-group col-md-6">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, class: 'form-control'%>
    </div>
  </div>

  <div class="row">
    <div class=" form-group col-md-3">
      <%= f.label :phone %>
      <%= f.text_field :phone, autofocus: true, class: 'form-control'%>
    </div>

    <div class=" form-group col-md-3">
      <%= f.label :other_phone, 'Blackberry' %>
      <%= f.text_field :other_phone, autofocus: true, class: 'form-control'%>
    </div>
  </div>


<hr/>
                
<div class="row">
  <div class="checkbox">
     <%= f.check_box :laptop_issue, class: 'form-control'%>
     <%= f.label :laptop_issue %>
  </div>   
  <div class="form-group col-sm-3">
     <%= f.label :laptop_desc, 'Description', class: 'sr-only' %>
     <%= f.text_field :laptop_desc, placeholder: 'Description', label: 'Description', class: 'form-control'%>
  </div>

  <div class="form-group col-md-6">
    <%= f.check_box :software_issue, as: :boolean %>
    <%= f.text_field :software_desc, placeholder: 'Description', label: 'Description', class: 'form-control' %>
  </div>

</div>

<div class="row">
<div class="col-md-6">


<%= f.check_box :blackberry_issue, as: :boolean %>

<%= f.text_field :blackberry_desc, placeholder: 'Description', label: 'Description',class: 'form-control' %>

</div>

<div class="col-md-6">

<%= f.check_box :email_issue, as: :boolean %>

<%= f.text_field :email_desc, placeholder: 'Description', label: 'Description',class: 'form-control' %>

</div>
</div>

<div class="row">
<div class="col-md-6">


<%= f.check_box :pst_issue, as: :boolean %>

<%= f.text_field :pst_desc, placeholder: 'Description', label: 'Description',class: 'form-control' %>


</div>

<div class="col-md-6">

<%= f.check_box :shared_folder_issue, as: :boolean %>

<%= f.text_field :shared_folder_desc, placeholder: 'Description', label: 'Description',class: 'form-control' %>

</div>
</div>

<div class="row">
<div class="col-md-6">


<%= f.check_box :other_hardware_issue, as: :boolean %>

<%= f.text_field :other_hardware_desc, placeholder: 'Description', label: 'Description',class: 'form-control' %>

</div>

<div class="col-md-6">

<%= f.check_box :air_card_issue, as: :boolean %>

<%= f.text_field :air_card_desc, placeholder: 'Description', label: 'Description',class: 'form-control' %>
  
</div>
</div>

<div class="row">
<div class="col-md-6">

<%= f.check_box :other_issue, as: :boolean %>

<%= f.text_field :other_desc, placeholder: 'Description', label: 'Description',class: 'form-control' %>

</div>
</div>
<div class="actions">
    <%= f.submit :class => 'btn btn-primary button right' %>
</div>
<% end %>

<hr/>



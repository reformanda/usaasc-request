<h3>Listing Requests</h3>
<table class="table">
  <thead>
    <tr>
      <th><%= sortable "name" %></th>
      <th>Email</th>
      <th>Phone</th>
      <th>Other phone</th>
      <th>Status</th>
      <th>Assigned To</th>
      <th>Issue Type</th>
      <% if current_user.try(:admin?) %>
      <th colspan="3"></th>
      <% elsif current_user.approver? %>
        <th colspan="1"></th>
      <% else %>
      <th></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% if @requests.count() == 0 %>
      <tr><td colspan="100"><p>No Requests found: <%= @requests.count() %></p></td></tr>
    <% else %>
    <% @requests.each do |request| %>
      <tr>
        <td><%= request.name %></td>
        <td><%= request.email %></td>
        <td><%= request.phone %></td>
        <td><%= request.other_phone %></td>
        <td><%= request.status %></td>
        <td><%= request.assigned_to_role %></td>
        <td>
    <% for issue in @issues %>
 
          <%= issue.title if request.issues.include?(issue)  %>

    <% end %>
        </td>
       
        
        <% if current_user.try(:admin?) %>
          <td><%= link_to 'Show', request %></td>
          <td><%= link_to 'Edit', edit_request_path(request) %></td>
          <td><%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% elsif current_user.approver? %>
          
          <td><%= link_to 'Approve/Disapprove', edit_request_path(request) %></td>

        <% else %>
          <td><%= link_to 'Show', request %></td>
        <% end %>  
      </tr>
    <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Request', new_request_path %>


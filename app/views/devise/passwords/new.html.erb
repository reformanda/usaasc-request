<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { role: 'form', method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="row">
  <div class="form-group col-md-6">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, class: 'form-control'%>
  </div>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", :class => 'btn btn-primary button right' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

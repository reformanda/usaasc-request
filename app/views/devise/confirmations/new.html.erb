<h2>Resend confirmation instructions</h2>

<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { role: 'form', method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="row">
  <div class="form-group col-md-6">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), class: 'form-control' %> 
  </div>
  </div>

  <div class="actions">
    <%= f.submit "Resend confirmation instructions", :class => 'btn btn-primary button right' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

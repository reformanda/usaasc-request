<h2>Editing User</h2>


<%= form_for(@user, url: admin_user_path, id: @user, html: { role: 'form', method: :patch }) do |f| %>

  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="row">
    <div class=" form-group col-sm-3">
      <%= f.label :first_name %>
      <%= f.text_field :first_name, autofocus: true, class: 'form-control'%>
    </div>
    <div class=" form-group col-sm-3">
      <%= f.label :last_name %>
      <%= f.text_field :last_name, autofocus: true, class: 'form-control'%>
    </div>
   </div> 

  <div class="row">
    <div class=" form-group col-sm-3">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, class: 'form-control'%>
    </div>
  </div>

  <div class="row">
    <div class=" form-group col-sm-3">
      <%= f.label :phone %>
      <%= f.text_field :phone, autofocus: true, class: 'form-control'%>
    </div>

    <div class=" form-group col-sm-3">
      <%= f.label :other_phone, 'Blackberry' %>
      <%= f.text_field :other_phone, autofocus: true, class: 'form-control'%>
    </div>
  </div>

  <div class="row">
    <div class=" form-group col-sm-4">
      <label>Roles</label>
      <div class="panel panel-default ">
        <div class="panel-body">
          
          <%= f.radio_button :role, :user, :checked => @user.role == 'user' %>
          <%= f.label :role_user, "User" %>
          &nbsp;
          <%= f.radio_button :role, :approver,  :checked => @user.role == 'approver' %>
          <%= label_tag(:role_approver, "Approver") %>
          &nbsp;
          <%= f.radio_button :role, :worker,  :checked => @user.role == 'worker' %>
          <%= label_tag(:role_worker, "Worker") %>
          &nbsp;
          <%= f.radio_button :role, :admin,  :checked => @user.role == 'admin'%>
          <%= label_tag(:role_admin, "Admin") %>

        </div>
      </div>
    </div>
  </div>
 
  <div class="actions">
    <%= f.submit :class => 'btn btn-primary button right' %>
 
  </div>


<% end %>





